<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".choosePlayers"
    android:background="#849300"
    android:id="@+id/choosePlayerParent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/scroll_view_choosePlayer"
        android:fillViewport="false">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollable_layout_choose_player"
        android:orientation="vertical">

    <TextView android:text="@string/team_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/editText_player3"
        android:layout_toStartOf="@+id/editText_player3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player1"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:text="@string/player1_name"
        android:ems="10"
        android:id="@+id/editText_player1"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player2"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:id="@+id/textView3"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/editText_player1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/player2_name"
        android:textColor="@color/white"
        android:ems="10"
        android:id="@+id/editText_player2"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/editText_player1"
        android:layout_alignStart="@+id/editText_player1" />

    <TextView
        android:text="@string/team_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:id="@+id/textView4"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/editText_player2"
        android:layout_toLeftOf="@+id/editText_player3"
        android:layout_toStartOf="@+id/editText_player3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player3"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/player3_name"
        android:textColor="@color/white"
        android:ems="10"
        android:id="@+id/editText_player3"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player4"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:id="@+id/textView6"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/player4_name"
        android:textColor="@color/white"
        android:ems="10"
        android:id="@+id/editText_player4"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignLeft="@+id/editText_player3"
        android:layout_alignStart="@+id/editText_player3" />

    <TextView
        android:text="@string/hand_point_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:id="@+id/textView7"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:text="@string/hand_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/editText_handPoint"
        android:layout_alignBottom="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:textColor="@color/white"
        android:layout_toEndOf="@+id/textView7" />

    <TextView
        android:text="@string/max_points_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true" />

    <EditText
        android:text="@string/max_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText_totalPoint"
        android:layout_alignBottom="@+id/textView8"
        android:layout_toRightOf="@+id/textView8"
        android:layout_toEndOf="@+id/textView8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset_button"
        android:id="@+id/reset_button"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/textView8"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit_button"
        android:id="@+id/submit_button"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/editText_player4"
        android:layout_alignEnd="@+id/editText_player4" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
